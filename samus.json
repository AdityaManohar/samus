{
  "actions": [
    {
      "action": "fs-sedfiles",
      "files": ["lib/*/version.rb"],
      "arguments": {
        "search": "VERSION = ['\"](.+?)['\"]",
        "replace": "VERSION = '$version'"
      }
    },
    {
      "action": "git-commit",
      "files": ["lib/*/version.rb"]
    },
    {
      "action": "git-merge",
      "arguments": {
        "branch": "master"
      }
    },
    {
      "action": "git-clone",
      "files": ["git-repo"],
      "publish": [
        {
          "action": "git-push",
          "arguments": {
            "remotes": "origin",
            "refs": "master v$version"
          }
        },
        {
          "action": "github-release",
          "credentials": "lsegal.github",
          "arguments": {
            "repository": "lsegal/samus",
            "tag": "v$version"
          }
        }
      ]
    },
    {
      "action": "gem-build",
      "files": ["*.gemspec"],
      "publish": [
        {
          "action": "gem-push",
          "files": ["*.gem"],
          "credentials": "lsegal.rubygems"
        }
      ]
    }
  ]
}
